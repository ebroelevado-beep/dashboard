{
  "$schema": "https://schema.railpack.com",
  "provider": "node",
  "packages": {
    "node": "22"
  },
  "steps": {
    "build": {
      "commands": ["pnpm build"],
      "variables": {
        "NODE_OPTIONS": "--max-old-space-size=1024"
      }
    }
  },
  "caches": {
    "pnpm": {
      "path": "/root/.local/share/pnpm/store/v3"
    }
  },
  "deploy": {
    "startCommand": "pnpm start",
    "variables": {
      "NODE_ENV": "production"
    }
  },
  "secrets": ["DATABASE_URL", "AUTH_SECRET", "NEXTAUTH_URL"]
}
